{
  "hosting": {
    "site": "openapi-maahita",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "**",
        "destination": "/",
        "type": 404
      }
    ]
  }
}