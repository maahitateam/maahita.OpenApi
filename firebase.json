{
    "hosting": {
        "public": "output",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/openapi.yaml",
                "destination": "/openapi.yaml"
            },
            {
                "source": "/",
                "destination": "/index.html"
            }
        ]
    }
}